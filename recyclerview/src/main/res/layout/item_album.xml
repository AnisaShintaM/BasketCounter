<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/album_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            tools:src="@drawable/image1" />

        <TextView
            android:id="@+id/album_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/album_imageview"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="ALBUM NAME" />

        <TextView
            android:id="@+id/artis_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/album_textview"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/album_imageview"
            tools:text="TAYLOR SWIFT" />
    </RelativeLayout>

</android.support.v7.widget.CardView>